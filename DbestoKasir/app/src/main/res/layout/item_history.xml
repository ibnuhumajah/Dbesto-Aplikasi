<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:weightSum="5">

            <ImageView
                android:id="@+id/imgHistory"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="2"
                android:src="@drawable/dbesto"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtNamaHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Menu"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtIdHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNamaHistory"
                        android:layout_marginTop="10dp"
                        android:text="kuantitas"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtIdHistory"
                        android:layout_marginTop="10dp"
                        android:text="kuantitas"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/totalHarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtQuantity"
                        android:layout_centerHorizontal="true"
                        android:text="Total"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
</androidx.cardview.widget.CardView>