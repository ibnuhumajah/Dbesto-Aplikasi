<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pelayananmain"
        tools:context=".Pelayanan.PelayananMain"
        android:orientation="horizontal">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarCustom.NoActionBar"
            android:elevation="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <include
                android:id="@+id/toolbar"
                layout="@layout/my_toolbar"/>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/namakasir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar"
            android:visibility="gone"
            android:background="@color/white"
            android:outlineAmbientShadowColor="@color/black">
            <TextView
                android:id="@+id/txtkasir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kasir: "
                android:textSize="21dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/nikkasir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nik"
                android:textSize="21dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/waktukasir"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Nik"
                android:textSize="21dp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/outpelayan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/txtkasir"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="70dp"
                android:text="Keluar"
                android:textSize="20dp"
                android:clickable="true"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/datameja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/namakasir"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <!--                Meja 1-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_meja1"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MEJA 1"
                                android:textColor="@color/black"
                                android:textSize="30dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/tv1"
                                android:background="@drawable/notif_circle" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="Tekan untuk melihat pesanan"
                                android:textSize="20dp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="340dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/ic_arrow_forward" />
                </androidx.cardview.widget.CardView>

                <!--                Meja 2-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_meja2"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MEJA 2"
                                android:textColor="@color/black"
                                android:textSize="30dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/tv2"
                                android:background="@drawable/notif_circle"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="Tekan untuk melihat pesanan"
                                android:textSize="20dp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="340dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/ic_arrow_forward" />
                </androidx.cardview.widget.CardView>

                <!--                Meja 3    -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_meja3"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MEJA 3"
                                android:textColor="@color/black"
                                android:textSize="30dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/tv3"
                                android:background="@drawable/notif_circle"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="Tekan untuk melihat pesanan"
                                android:textSize="20dp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="340dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/ic_arrow_forward" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <!--                Meja 4-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_meja4"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MEJA 4"
                                android:textColor="@color/black"
                                android:textSize="30dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/tv4"
                                android:background="@drawable/notif_circle"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="Tekan untuk melihat pesanan"
                                android:textSize="20dp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="340dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/ic_arrow_forward" />
                </androidx.cardview.widget.CardView>

                <!--                Meja 5-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_meja5"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/tv5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MEJA 5"
                                android:textColor="@color/black"
                                android:textSize="30dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/tv5"
                                android:background="@drawable/notif_circle"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="Tekan untuk melihat pesanan"
                                android:textSize="20dp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="340dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/ic_arrow_forward" />
                </androidx.cardview.widget.CardView>

                <!--                Meja 6-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_meja6"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/tv6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MEJA 6"
                                android:textColor="@color/black"
                                android:textSize="30dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_toEndOf="@+id/tv6"
                                android:background="@drawable/notif_circle"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="Tekan untuk melihat pesanan"
                                android:textSize="20dp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="340dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/ic_arrow_forward" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/scanbann"
            android:layout_below="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/purple_700"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_above="@+id/lnbnt">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/dbesto"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pelayanan"
                    android:textSize="60dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnbnt"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/scankasir"
                    android:layout_width="500dp"
                    android:layout_height="100dp"
                    android:background="@drawable/back_button"
                    android:text="SCAN QR CODE >"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:clickable="true"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

