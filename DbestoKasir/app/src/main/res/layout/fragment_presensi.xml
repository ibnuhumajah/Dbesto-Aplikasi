<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_presensi"
    android:layout_height="match_parent"
    tools:context=".Presensi.PresensiFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_head">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:fontFamily="@font/forte"
            android:textAlignment="center"
            android:text="d'Besto"
            android:textColor="@color/white"
            android:textSize="90dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/scanpresensi"
        app:cardCornerRadius="50dp"
        android:layout_width="850dp"
        android:layout_height="400dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:clickable="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backcard2"/>

        <ImageView
            android:layout_marginLeft="500dp"
            android:layout_marginTop="-2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dbestokentang"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtpresensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/presen"
                android:textSize="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/about2"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="300dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tekan Untuk Melakukan Absensi >"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>